<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linMainHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ten_dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/imgSubCategory"
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical" />

        <TextView
                android:id="@+id/txtSubCategoryName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:padding="@dimen/ten_dp"
                android:textAlignment="viewStart"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/fifteen_sp"/>

        <ImageView
                android:id="@+id/imgArrow"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center_vertical"
                android:tint="@color/arrow_icon_color"
                android:src="@drawable/ic_right_arrow_dark" />

    </LinearLayout>

    <View
            android:id="@+id/viewDivider"
            android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/ten_dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_height="@dimen/corner_radius"
            android:background="@color/white_shade"/>

</LinearLayout>
