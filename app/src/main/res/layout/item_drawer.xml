<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linDividerTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_height"
        android:layout_alignParentTop="true"
        android:background="@color/divider_line_color"
        android:orientation="horizontal"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/relMAin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/medium_margin"
        android:paddingVertical="@dimen/medium_margin">


        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_15sdp"
            android:gravity="start"
            android:tint="@color/arrow_tint"
            app:srcCompat="@drawable/ic_next_arrow" />


        <TextView
            android:id="@+id/txtDrawerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_toStartOf="@+id/ivDetail"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/MenuFontSize" />

        <ImageView
            android:id="@+id/ivDetail"
            android:layout_width="@dimen/ten_dp"
            android:layout_height="@dimen/ten_dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:tint="@color/arrow_tint"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_next_arrow" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linDividerMenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_height"
        android:layout_below="@+id/relMAin"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@color/divider_line_color"
        android:orientation="horizontal"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linSpace"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifteen_dp"
        android:orientation="horizontal"
        android:visibility="gone" />

</RelativeLayout>

