<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/ten_dp">

        <ImageView
                android:id="@+id/ivTick"
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_checkout_success" />

        <TextView
                android:id="@+id/txtOrderStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:layout_marginEnd="@dimen/ten_dp"
                android:layout_toEndOf="@+id/ivTick"
                android:text="@string/order_successful"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/MediumTextSize" />

        <TextView
                android:id="@+id/txtOrderNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtOrderStatus"
                android:layout_marginStart="@dimen/ten_dp"
                android:layout_marginTop="@dimen/seven_dp"
                android:layout_marginEnd="@dimen/ten_dp"
                android:layout_toEndOf="@+id/ivTick"
                android:textAllCaps="true"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/TitleTextSize" />


    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_line_color"
            android:orientation="horizontal" />

    <TextView
            android:id="@+id/txtOrderStatusMsg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/thirty_five_dp"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginEnd="@dimen/ten_dp"
            android:gravity="center_vertical"
            android:text="@string/thank_you_msg"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/TitleTextSize" />

    <LinearLayout
            android:id="@+id/linDivLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_line_color"
            android:orientation="horizontal" />

</LinearLayout>
