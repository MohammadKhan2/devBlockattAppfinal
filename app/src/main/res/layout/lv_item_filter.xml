<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/relMain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_five_dp"
            android:gravity="center_vertical"
    >

        <TextView
                android:id="@+id/txtAttributeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifteen_dp"
                android:text="@string/sort"
                android:textAllCaps="true"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/TitleTextSize" />

        <TextView
                android:id="@+id/txtAttribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtAttributeName"
                android:layout_marginLeft="@dimen/fifteen_dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/SmallestTextSize"
                android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/linDivLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_line_color"
            android:orientation="horizontal" />
</LinearLayout>