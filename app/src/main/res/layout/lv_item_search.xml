<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relMainHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground">


    <RelativeLayout
        android:id="@+id/relClearRecentSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/subtitle_desc_margin"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtClearRecent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtClear"
            android:layout_alignBottom="@+id/txtClear"
            android:layout_marginStart="@dimen/screen_margin"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:text="@string/recent_search"
            android:textAllCaps="true"
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/DescriptionTextSize" />

        <TextView
            android:id="@+id/txtClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/screen_margin"
            android:background="@color/app_bg_color"
            android:paddingStart="@dimen/fifteen_dp"
            android:paddingTop="@dimen/seven_dp"
            android:paddingEnd="@dimen/fifteen_dp"
            android:paddingBottom="@dimen/seven_dp"
            android:text="@string/clear"
            android:textAllCaps="true"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/DescriptionTextSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_height"
            android:layout_below="@+id/txtClearRecent"
            android:layout_marginTop="@dimen/seven_dp"
            android:background="@color/divider_line_color"
            android:orientation="horizontal"
            android:visibility="gone" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:layout_below="@+id/relClearRecentSearch"
        android:background="@color/white"
        android:visibility="visible">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/fifteen_dp"
            android:layout_marginTop="@dimen/screen_margin"
            android:layout_marginEnd="@dimen/fifteen_dp"
            android:layout_marginBottom="@dimen/screen_margin"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:textAlignment="viewStart"
            android:maxLines="2"
            android:text="ttt"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/SubTitleTextSize" />

        <TextView
            android:id="@+id/txtProductCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/seven_dp"
            android:layout_toStartOf="@+id/img_next"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/SubTitleTextSize"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="@dimen/fifteen_dp"
            android:layout_height="@dimen/fifteen_dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/five_dp"
            android:padding="2dp"
            android:rotation="270"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_arrow_bold_down" />

        <LinearLayout
            android:id="@+id/linDivLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_height"
            android:layout_alignParentBottom="true"
            android:background="@color/divider_line_color"
            android:orientation="horizontal"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>